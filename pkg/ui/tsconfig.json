{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "noEmit": true,
    "incremental": true,
    "rootDir": ".",
    "outDir": "out",
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "out",
    "node_modules",
    "../../node_modules"
  ],
}
